<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/barberbackground"
    tools:context=".ChangeUserInfoActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/vornameEditTextc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="37dp"
            android:ems="10"
            android:hint="Vorname"
            android:inputType="textPersonName"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            app:layout_constraintBottom_toTopOf="@+id/nachnameEditTextc"
            app:layout_constraintEnd_toEndOf="@+id/nachnameEditTextc"
            app:layout_constraintStart_toStartOf="@+id/herrRadioButtonc"
            app:layout_constraintTop_toBottomOf="@+id/herrRadioButtonc" />

        <EditText
            android:id="@+id/nachnameEditTextc"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="32dp"
            android:ems="10"
            android:hint="Nachname"
            android:inputType="textPersonName"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            app:layout_constraintBottom_toTopOf="@+id/benutzernameEditTextc"
            app:layout_constraintEnd_toEndOf="@+id/benutzernameEditTextc"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/benutzernameEditTextc"
            app:layout_constraintTop_toBottomOf="@+id/vornameEditTextc" />

        <EditText
            android:id="@+id/benutzernameEditTextc"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="40dp"
            android:ems="10"
            android:hint="E-mail"
            android:inputType="textPersonName"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            app:layout_constraintBottom_toTopOf="@+id/kennwortEditTextc"
            app:layout_constraintEnd_toEndOf="@+id/kennwortEditTextc"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/kennwortEditTextc"
            app:layout_constraintTop_toBottomOf="@+id/nachnameEditTextc" />

        <RadioButton
            android:id="@+id/herrRadioButtonc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="76dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="29dp"
            android:text="Herr"
            android:textColor="#ffffff"
            app:layout_constraintBottom_toTopOf="@+id/vornameEditTextc"
            app:layout_constraintEnd_toStartOf="@+id/frauRadioButtonc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioButton
            android:id="@+id/frauRadioButtonc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="209dp"
            android:text="Frau"
            android:textColor="#ffffff"
            app:layout_constraintBaseline_toBaselineOf="@+id/herrRadioButtonc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/herrRadioButtonc" />

        <EditText
            android:id="@+id/kennwortEditTextc"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginBottom="25dp"
            android:ems="10"
            android:hint="Kennwort"
            android:inputType="textPassword"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            app:layout_constraintBottom_toTopOf="@+id/handynummerEditTextc"
            app:layout_constraintEnd_toEndOf="@+id/handynummerEditTextc"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/handynummerEditTextc"
            app:layout_constraintTop_toBottomOf="@+id/benutzernameEditTextc" />

        <EditText
            android:id="@+id/handynummerEditTextc"
            android:layout_width="0dp"
            android:layout_height="59dp"
            android:layout_marginBottom="34dp"
            android:ems="10"
            android:hint="Handynummer"
            android:inputType="phone"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            app:layout_constraintBottom_toTopOf="@+id/adresseEditTextc"
            app:layout_constraintEnd_toEndOf="@+id/adresseEditTextc"
            app:layout_constraintStart_toStartOf="@+id/adresseEditTextc"
            app:layout_constraintTop_toBottomOf="@+id/kennwortEditTextc" />

        <EditText
            android:id="@+id/adresseEditTextc"
            android:layout_width="269dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="28dp"
            android:ems="10"
            android:hint="Adresse"
            android:inputType="textMultiLine"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            app:layout_constraintBottom_toTopOf="@+id/submitButtonc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/handynummerEditTextc" />

        <Button
            android:id="@+id/submitButtonc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:onClick="submit"
            android:text="submit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/adresseEditTextc" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>